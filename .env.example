# Database connection
DATABASE_URL="postgresql://postgres:password@localhost:5432/talentsyncza"

# JWT Secret for authentication
JWT_SECRET="your-secret-key-here"

# PayFast payment gateway credentials
PAYFAST_MERCHANT_ID="your-merchant-id"
PAYFAST_MERCHANT_KEY="your-merchant-key"
PAYFAST_PASSPHRASE="your-passphrase"
PAYFAST_TEST_MODE=true # Set to false in production

# Application settings
NODE_ENV="development" # change to "production" for production deployment
PORT=5000 # Port for the server
VITE_APP_URL="http://localhost:5000" # Base URL for the application

# B-BBEE API configuration
BBBEE_API_KEY="your-api-key"

# WhatsApp API for reminders
WHATSAPP_API_KEY="your-whatsapp-api-key"